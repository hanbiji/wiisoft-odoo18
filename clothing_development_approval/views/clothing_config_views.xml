<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 服装配置表单视图 -->
        <record id="view_clothing_config_form" model="ir.ui.view">
            <field name="name">clothing.config.form</field>
            <field name="model">clothing.config</field>
            <field name="arch" type="xml">
                <form string="服装配置">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="配置名称..."/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="基本信息">
                                <field name="config_code" required="1"/>
                                <field name="config_value" required="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="描述" name="description">
                                <group>
                                    <field name="description" nolabel="1" placeholder="配置项的详细描述..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <chatter/>
                    </div>
                </form>
            </field>
        </record>

        <!-- 服装配置列表视图 -->
        <record id="view_clothing_config_list" model="ir.ui.view">
            <field name="name">clothing.config.list</field>
            <field name="model">clothing.config</field>
            <field name="arch" type="xml">
                <list string="服装配置" editable="bottom">
                    <field name="name"/>
                    <field name="config_code"/>
                    <field name="config_value"/>
                </list>
            </field>
        </record>

        <!-- 服装配置搜索视图 -->
        <record id="view_clothing_config_search" model="ir.ui.view">
            <field name="name">clothing.config.search</field>
            <field name="model">clothing.config</field>
            <field name="arch" type="xml">
                <search string="搜索服装配置">
                    <field name="name" string="配置名称" 
                           filter_domain="[('name', 'ilike', self)]"/>
                    <field name="config_code" string="配置代码"
                           filter_domain="[('config_code', 'ilike', self)]"/>
                    <field name="config_value" string="配置值"
                           filter_domain="[('config_value', 'ilike', self)]"/>
                </search>
            </field>
        </record>

        <!-- 服装配置窗口动作 -->
        <record id="action_clothing_config" model="ir.actions.act_window">
            <field name="name">服装配置</field>
            <field name="res_model">clothing.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建第一个服装配置项
                </p>
                <p>
                    服装配置用于管理系统的各种配置参数，如默认值、业务规则等。
                </p>
            </field>
        </record>

    </data>
</odoo>