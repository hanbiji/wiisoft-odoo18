<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 服装开发审批流程主菜单配置 -->
        
        <!-- 主菜单 -->
        <menuitem id="menu_clothing_development_root"
                  name="服装开发审批"
                  sequence="100"/>
        
        <!-- 通用申请管理菜单 -->
        <record id="action_clothing_development_request_all" model="ir.actions.act_window">
            <field name="name">所有申请</field>
            <field name="res_model">clothing.development.request</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建您的第一个服装开发申请
                </p>
                <p>
                    在这里您可以管理所有的服装开发申请和审批流程。
                </p>
            </field>
        </record>
        
        <menuitem id="menu_clothing_development_all_requests"
                  name="所有申请"
                  parent="menu_clothing_development_root"
                  action="action_clothing_development_request_all"
                  sequence="10"/>
        
        <!-- 配置菜单 -->
        <menuitem id="menu_clothing_development_config"
                  name="配置"
                  parent="menu_clothing_development_root"
                  sequence="100"/>
        
        <!-- 服装尺寸菜单 -->
        <menuitem id="menu_clothing_size"
                  name="服装尺寸"
                  parent="menu_clothing_development_config"
                  action="clothing_development_approval.action_clothing_size"
                  groups="clothing_development_approval.group_clothing_development_manager,clothing_development_approval.group_designer"
                  sequence="10"/>
        
    </data>
</odoo>