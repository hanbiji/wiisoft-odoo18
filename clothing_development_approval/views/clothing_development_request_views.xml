<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 服装开发申请表单视图 -->
        <record id="view_clothing_development_request_form" model="ir.ui.view">
            <field name="name">clothing.development.request.form</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <form string="服装开发申请">
                    <header>
                        <!-- 操作按钮 -->
                        <button name="action_submit" type="object" string="提交申请" 
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <!-- 产品经理操作 -->
                        <button name="action_product_review" type="object" string="开始产品审核" 
                                class="oe_highlight" invisible="state != 'submitted'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <button name="action_approve_to_design" type="object" string="批准进入设计" 
                                class="oe_highlight" invisible="state != 'product_review'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <button name="action_approve_to_pattern" type="object" string="批准进入版型制作" 
                                class="oe_highlight" invisible="state != 'design_review'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <!-- 设计师操作 -->
                        <button name="action_design_complete" type="object" string="设计完成" 
                                class="oe_highlight" invisible="state != 'design'" 
                                groups="clothing_development_approval.group_designer"/>
                        <!-- 版师操作 -->
                        <button name="action_pattern_complete" type="object" string="版型制作完成" 
                                class="oe_highlight" invisible="state != 'pattern_making'" 
                                groups="clothing_development_approval.group_pattern_maker"/>
                        <button name="action_approve_to_sample" type="object" string="批准进入样衣制作" 
                                class="oe_highlight" invisible="state != 'pattern_review'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <!-- 样衣工操作 -->
                        <button name="action_sample_complete" type="object" string="样衣制作完成" 
                                class="oe_highlight" invisible="state != 'sample_making'" 
                                groups="clothing_development_approval.group_sample_worker"/>
                        <button name="action_final_approval" type="object" string="进入最终审批" 
                                class="oe_highlight" invisible="state != 'sample_review'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <button name="action_approve" type="object" string="最终批准" 
                                class="oe_highlight" invisible="state != 'final_approval'" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <!-- 通用操作 -->
                        <button name="action_complete" type="object" string="完成开发" 
                                class="oe_highlight" invisible="state != 'approved'"/>
                        <button name="action_reject" type="object" string="拒绝" 
                                invisible="state in ['completed', 'cancelled', 'draft']" 
                                groups="clothing_development_approval.group_product_manager"/>
                        <button name="action_cancel" type="object" string="取消" 
                                invisible="state in ['completed', 'cancelled']"/>
                        <button name="action_reset_to_draft" type="object" string="重置为草稿" 
                                invisible="state not in ['rejected', 'cancelled']"/>
                        
                        <!-- 状态栏 -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,product_review,design,design_review,pattern_making,pattern_review,sample_making,sample_review,final_approval,approved,completed"/>
                    </header>
                    <sheet>
                        <!-- 顶部按钮区域 -->
                        <div class="oe_button_box" name="button_box">
                            <!-- 可以在这里添加智能按钮 -->
                        </div>
                        
                        <!-- 主要信息区域 -->
                        <div class="oe_title">
                            <div class="d-flex align-items-center">
                                <h1 class="flex-grow-1">
                                    <field name="name" readonly="1"/>
                                </h1>
                                <field name="thumbnail" widget="image" class="oe_avatar ms-3" style="width: 64px; height: 64px;"/>
                            </div>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="基本信息">
                                <field name="brand"/>
                                <field name="year"/>
                                <field name="batch"/>
                                <field name="style_number"/>
                                <field name="clothing_type"/>
                                <field name="style"/>
                                <field name="target_season"/>
                                <field name="target_gender"/>
                            </group>
                            <group name="schedule_info" string="时间安排">
                                <field name="expected_start_date"/>
                                <field name="expected_completion_date"/>
                                <field name="actual_completion_date" invisible="state not in ['completed']"/>
                                <field name="duration_days" invisible="state in ['completed', 'cancelled']"/>
                                <field name="applicant_id"/>
                                <field name="clothing_size_ids" widget="many2many_tags"/>
                                <field name="color_id"/>
                                <field name="secondary_color_ids" widget="many2many_tags"/>
                                <field name="priority"/>
                            </group>
                        </group>
                    
                        
                        <notebook>
                            <page string="设计参考" name="description">
                                <group>
                                    <field name="description" nolabel="1" placeholder="请详细描述服装开发需求..." widget="html" options="{'toolbar': true}"/>
                                </group>
                            </page>
                            <page string="设计稿图" name="design_requirements">
                                <group>
                                    <field name="design_requirements" nolabel="1" placeholder="请描述具体的设计要求和规格..." widget="html"/>
                                </group>
                            </page>
                            <page string="打板图" name="board_drawing">
                                <group>
                                    <!-- 限定仅显示本记录的附件，并在上传时自动带上res_model与当前记录id -->
                                    <field name="board_drawing_ids"
                                           nolabel="1"
                                           widget="many2many_binary"
                                           domain="[('res_model', '=', 'clothing.development.request'), ('res_id', '=', id)]"
                                           options="{'preview_image': True, 'accepted_file_extensions': '.png,.jpg,.jpeg,.gif,.bmp,.tiff,.webp,.mp4,.avi,.mov,.wmv'}"
                                           context="{'default_res_model': 'clothing.development.request', 'default_res_id': id}"/>

                                    <separator string="预览（点击打开）"/>
                                    <field name="board_drawing_ids" nolabel="1" readonly="1" mode="kanban" options="{'no_open': True}">
                                        <kanban class="o_kanban_small_column o_attachments_kanban wiiboard-gallery">
                                            <templates>
                                                <t t-name="card">
                                                    <div class="o_kanban_record" style="text-align:center; padding:8px;">
                                                        <t t-if="record.mimetype and record.mimetype.raw_value and record.mimetype.raw_value.startsWith('image/')">
                                                            <a t-att-href="'/web/image/%s?unique=1' % record.id.raw_value" class="wiiboard-thumb" target="_self" t-att-title="record.name and record.name.value" t-att-data-id="record.id.raw_value" t-att-data-src="'/web/image/%s?unique=1' % record.id.raw_value" t-att-data-name="record.name and record.name.value">
                                                                <img t-att-src="'/web/image/%s?unique=1' % record.id.raw_value" t-att-alt="(record.name and record.name.value) or 'image'" style="max-height:140px; max-width:100%; object-fit:contain; border:1px solid #ddd; border-radius:4px;"/>
                                                            </a>
                                                            <div class="text-truncate" style="margin-top:6px;"><t t-esc="record.name and record.name.value"/></div>
                                                        </t>
                                                        <t t-else="">
                                                            <a t-att-href="'/web/content/%s?download=false' % record.id.raw_value" target="_blank" t-att-title="record.name and record.name.value" style="display:inline-block; text-decoration:none; color:inherit;">
                                                                <i class="fa fa-file-o fa-3x" aria-hidden="true" style="color:#888;"></i>
                                                                <div class="text-truncate" style="margin-top:6px; max-width:180px;"><t t-esc="record.name and record.name.value"/></div>
                                                            </a>
                                                        </t>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </group>
                            </page>
                            <page string="样衣挂牌图" name="sample_clothing">
                                <group>
                                    <field name="sample_clothing" nolabel="1" placeholder="请上传样衣图片或视频..." widget="html"/>
                                </group>
                            </page>

                            <page name="other_info" string="其它信息">
                                <group>
                                    <field name="estimated_cost"/>
                                    <field name="actual_cost" invisible="state not in ['in_development', 'completed']"/>
                                    <field name="cost_variance" invisible="state not in ['in_development', 'completed']"/>
                                </group>
                                <group name="approval_info" string="审批信息">
                                    <field name="current_handler_id" invisible="state in ['draft', 'completed', 'cancelled']"/>
                                    <field name="approver_id" invisible="state in ['draft']"/>
                                    <field name="approval_date" invisible="state in ['draft', 'submitted']"/>
                                </group>
                                <group>
                                    <group name="role_assignment" string="角色分配">
                                        <field name="product_manager_id" groups="clothing_development_approval.group_product_manager,clothing_development_approval.group_clothing_development_manager"/>
                                        <field name="designer_id" groups="clothing_development_approval.group_product_manager,clothing_development_approval.group_clothing_development_manager"/>
                                    </group>
                                    <group name="role_assignment2" string="">
                                        <field name="pattern_maker_id" groups="clothing_development_approval.group_product_manager,clothing_development_approval.group_clothing_development_manager"/>
                                        <field name="sample_worker_id" groups="clothing_development_approval.group_product_manager,clothing_development_approval.group_clothing_development_manager"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- SKU 变体 -->
                            <page name="sku_variants" string="SKU变体">
                                <div class="oe_button_box" style="margin-bottom: 10px;">
                                    <button name="action_generate_sku_variants" type="object" 
                                            string="生成SKU变体" class="btn-primary"
                                            help="根据当前配置生成所有SKU变体"/>
                                </div>
                                <field name="sku_variant_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name" string="名称" readonly="1"/>
                                        <field name="sku" string="SKU" readonly="1"/>
                                        <field name="size_id" string="尺寸" readonly="1"/>
                                        <field name="color_id" string="颜色" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- 服装开发申请列表视图 -->
        <record id="view_clothing_development_request_tree" model="ir.ui.view">
            <field name="name">clothing.development.request.tree</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <list string="服装开发申请" decoration-info="state=='draft'" decoration-warning="state in ['submitted','product_review']" decoration-success="state=='approved'" decoration-primary="state in ['design','pattern_making','sample_making']" decoration-muted="state in ['cancelled','rejected']">
                    <field name="thumbnail" widget="image" width="50"/>
                    <field name="name"/>
                    <field name="year"/>
                    <field name="batch"/>
                    <field name="style_number"/>
                    <field name="clothing_type"/>
                    <field name="target_season"/>
                    <field name="applicant_id"/>
                    <field name="current_handler_id"/>
                    <field name="expected_start_date"/>
                    <field name="expected_completion_date"/>
                    <field name="priority"/>
                    <field name="estimated_cost" sum="总预算"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state in ['submitted','product_review']" decoration-success="state=='approved'" decoration-primary="state in ['design','pattern_making','sample_making']" decoration-muted="state in ['cancelled','rejected']"/>
                </list>
            </field>
        </record>
        
        <!-- 服装开发申请搜索视图 -->
        <record id="view_clothing_development_request_search" model="ir.ui.view">
            <field name="name">clothing.development.request.search</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <search string="搜索服装开发申请">
                    <!-- 搜索字段 -->
                    <field name="name" string="申请编号" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="year" string="年份"/>
                    <field name="batch" string="批次"/>
                    <field name="style_number" string="款号"/>
                    <field name="clothing_type" string="服装类型"/>
                    <field name="applicant_id" string="申请人"/>
                    <field name="department_id" string="部门"/>
                    <field name="target_season" string="目标季节"/>
                    
                    <!-- 过滤器 -->
                    <filter string="我的申请" name="my_requests" domain="[('applicant_id', '=', uid)]"/>
                    <filter string="我负责处理" name="my_tasks" domain="[('current_handler_id', '=', uid)]"/>
                    <separator/>
                    <filter string="待提交" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="产品审核中" name="product_review" domain="[('state', '=', 'product_review')]"/>
                    <filter string="设计阶段" name="design" domain="[('state', '=', 'design')]"/>
                    <filter string="设计审核中" name="design_review" domain="[('state', '=', 'design_review')]"/>
                    <filter string="版型制作中" name="pattern_making" domain="[('state', '=', 'pattern_making')]"/>
                    <filter string="版型审核中" name="pattern_review" domain="[('state', '=', 'pattern_review')]"/>
                    <filter string="样衣制作中" name="sample_making" domain="[('state', '=', 'sample_making')]"/>
                    <filter string="样衣审核中" name="sample_review" domain="[('state', '=', 'sample_review')]"/>
                    <filter string="最终审批" name="final_approval" domain="[('state', '=', 'final_approval')]"/>
                    <filter string="已批准" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="已完成" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="已拒绝" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter string="已取消" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    
                    <separator/>
                    <group expand="0" string="分组">
                        <filter string="状态" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="年份" name="group_by_year" context="{'group_by': 'year'}"/>
                        <filter string="申请人" name="group_by_applicant" context="{'group_by': 'applicant_id'}"/>
                        <filter string="部门" name="group_by_department" context="{'group_by': 'department_id'}"/>
                        <filter string="优先级" name="group_by_priority" context="{'group_by': 'priority'}"/>
                        <filter string="开始月份" name="group_by_month" context="{'group_by': 'expected_start_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- 动作定义 -->
        <record id="action_clothing_development_request" model="ir.actions.act_window">
            <field name="name">服装开发申请</field>
            <field name="res_model">clothing.development.request</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建第一个服装开发申请
                </p>
                <p>
                    服装开发申请用于管理从设计到生产的整个开发流程。
                    您可以跟踪申请状态、预算、时间安排等关键信息。
                </p>
            </field>
        </record>
        
        <!-- 菜单定义 -->
        <menuitem id="menu_clothing_development_root" name="服装开发" sequence="10"/>
        <menuitem id="menu_clothing_development_request" name="开发申请" parent="menu_clothing_development_root" action="action_clothing_development_request" sequence="10"/>
        
    </data>
</odoo>