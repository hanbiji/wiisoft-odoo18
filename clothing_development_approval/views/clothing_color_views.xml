<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 颜色表单视图 -->
        <record id="view_clothing_color_form" model="ir.ui.view">
            <field name="name">clothing.color.form</field>
            <field name="model">clothing.color</field>
            <field name="arch" type="xml">
                <form string="服装颜色">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="颜色名称..."/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="color_code"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="描述" name="description">
                                <field name="description" placeholder="关于此颜色的描述..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- 颜色列表视图 -->
        <record id="view_clothing_color_list" model="ir.ui.view">
            <field name="name">clothing.color.list</field>
            <field name="model">clothing.color</field>
            <field name="arch" type="xml">
                <list string="服装颜色">
                    <field name="name"/>
                    <field name="color_code"/>
                    <field name="active"/>
                </list>
            </field>
        </record>
        
        <!-- 颜色搜索视图 -->
        <record id="view_clothing_color_search" model="ir.ui.view">
            <field name="name">clothing.color.search</field>
            <field name="model">clothing.color</field>
            <field name="arch" type="xml">
                <search string="搜索颜色">
                    <field name="name" string="颜色名称" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="color_code" string="颜色代码" filter_domain="[('color_code', 'ilike', self)]"/>
                    <filter string="有效" name="active" domain="[('active', '=', True)]"/>
                    <filter string="归档" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>
        
        <!-- 颜色动作窗口 -->
        <record id="action_clothing_color" model="ir.actions.act_window">
            <field name="name">服装颜色</field>
            <field name="res_model">clothing.color</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_clothing_color_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建第一个颜色
                </p>
                <p>
                    管理服装颜色及其对应的颜色代码。
                </p>
            </field>
        </record>
        
        
        
    </data>
</odoo>