<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 设计参考图片表单视图 -->
        <record id="view_clothing_design_reference_form" model="ir.ui.view">
            <field name="name">clothing.design.reference.form</field>
            <field name="model">clothing.design.reference</field>
            <field name="arch" type="xml">
                <form string="设计参考图片">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="request_id"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <group string="参考图片">
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- 设计参考图片列表视图 -->
        <record id="view_clothing_design_reference_tree" model="ir.ui.view">
            <field name="name">clothing.design.reference.tree</field>
            <field name="model">clothing.design.reference</field>
            <field name="arch" type="xml">
                <list string="设计参考图片">
                    <field name="name"/>
                    <field name="request_id"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                </list>
            </field>
        </record>

        <!-- 设计参考图片看板视图 -->
        <record id="view_clothing_design_reference_kanban" model="ir.ui.view">
            <field name="name">clothing.design.reference.kanban</field>
            <field name="model">clothing.design.reference</field>
            <field name="arch" type="xml">
                <kanban string="设计参考图片">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="image"/>
                    <field name="request_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('clothing.design.reference', 'image', record.id.raw_value)" alt="参考图片"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_body">
                                        <field name="request_id"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- 设计参考图片搜索视图 -->
        <record id="view_clothing_design_reference_search" model="ir.ui.view">
            <field name="name">clothing.design.reference.search</field>
            <field name="model">clothing.design.reference</field>
            <field name="arch" type="xml">
                <search string="搜索设计参考图片">
                    <field name="name" string="图片名称"/>
                    <field name="request_id" string="关联申请"/>
                    <filter string="我创建的" name="my_references" domain="[('create_uid', '=', uid)]"/>
                    <group expand="0" string="分组">
                        <filter string="关联申请" name="group_by_request" context="{'group_by': 'request_id'}"/>
                        <filter string="创建人" name="group_by_creator" context="{'group_by': 'create_uid'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- 设计参考图片动作 -->
        <record id="action_clothing_design_reference" model="ir.actions.act_window">
            <field name="name">设计参考图片</field>
            <field name="res_model">clothing.design.reference</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_clothing_design_reference_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建您的第一个设计参考图片
                </p>
                <p>
                    在这里您可以上传和管理设计参考图片，为服装开发提供灵感和参考。
                </p>
            </field>
        </record>

    </data>
</odoo>