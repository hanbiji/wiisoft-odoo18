<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- 先定义按钮引用的动作，避免占位符解析失败 -->
    <record id="action_view_landlord_contract" model="ir.actions.act_window">
        <field name="name">房东合同</field>
        <field name="res_model">mall.leasing.contract</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("facade_ids", "in", [active_id]), ("contract_type", "=", "landlord")]</field>
        <field name="context">{"default_facade_ids": [(6, 0, [active_id])], "default_contract_type": "landlord"}</field>
    </record>

    <record id="action_view_tenant_contract" model="ir.actions.act_window">
        <field name="name">租户合同</field>
        <field name="res_model">mall.leasing.contract</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("facade_ids", "in", [active_id]), ("contract_type", "=", "tenant")]</field>
        <field name="context">{"default_facade_ids": [(6, 0, [active_id])], "default_contract_type": "tenant"}</field>
    </record>

    <!-- 门面列表视图 -->
    <record id="view_mall_facade_tree" model="ir.ui.view">
        <field name="name">mall.facade.tree</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <list>
                <field name="mall_id"/>
                <field name="name"/>
                <field name="zone"/>
                <field name="address"/>
                <field name="area"/>
                <field name="floor"/>
                <field name="facade_type"/>
                <field name="status"/>
                <field name="tenant_contract_id"/>
                <field name="tenant_partner_id"/>
            </list>
        </field>
    </record>

    <!-- 门面表单视图 -->
    <record id="view_mall_facade_form" model="ir.ui.view">
        <field name="name">mall.facade.form</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_landlord_contract" icon="fa-home">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">房东合同</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_tenant_contract" icon="fa-users">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">租赁合同</span>
                            </div>
                        </button>
                        
                        <button class="oe_stat_button" type="object" name="action_view_property_contract" icon="fa-home">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">物业合同</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="门面名称"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="基本信息">
                            <field name="mall_id" required="1"/>
                            <field name="zone"/>
                            <field name="position"/>
                            <field name="facade_type"/>
                            <field name="area"/>
                            <field name="floor"/>
                            <field name="status"/>
                        </group>
                        <group name="mall_info" string="商场信息">
                            <field name="mall_name"/>
                            <field name="mall_status"/>
                        </group>
                    </group>
                    
                    <group name="address_info" string="地址信息">
                        <field name="address" nolabel="1"/>
                    </group>
                    
                    <group name="facilities" string="设施配置">
                        <group>
                            <field name="has_water"/>
                            <field name="has_electricity"/>
                        </group>
                        <group>
                            <field name="has_gas"/>
                            <field name="has_air_conditioning"/>
                        </group>
                    </group>
                    
                    <group name="contract_info" string="合同信息">
                        <group>
                            <field name="landlord_contract_id"/>
                        </group>
                        <group>
                            <field name="tenant_contract_id"/>
                        </group>
                        <group>
                            <field name="property_contract_id"/>
                        </group>
                    </group>
                    
                    <group name="images" string="图片">
                        <field name="image_main" widget="image" class="oe_avatar"/>
                        <field name="layout_plan" widget="image"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <chatter/>
                </div>
            </form>
        </field>
    </record>

    <!-- 门面看板视图 -->
    <record id="view_mall_facade_kanban" model="ir.ui.view">
        <field name="name">mall.facade.kanban</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="mall_id"/>
                <field name="mall_name"/>
                <field name="zone"/>
                <field name="floor"/>
                <field name="area"/>
                <field name="facade_type"/>
                <field name="status"/>
                <field name="image_main"/>
                <field name="tenant_contract_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div class="o_kanban_record_subtitle">
                                <field name="mall_name"/> - <field name="zone"/> <field name="floor"/>
                            </div>
                            <div class="oe_kanban_content">
                                <div>
                                    <span>面积: <field name="area"/>㎡</span>
                                </div>
                                <div>
                                    <span>类型: <field name="facade_type"/></span>
                                </div>
                                <div t-if="record.tenant_partner_id">
                                    <span>租户: <field name="tenant_partner_id"/></span>
                                </div>
                            </div>
                            <div class="oe_kanban_bottom_left">
                                <field name="status" widget="label_selection" 
                                        options="{'classes': {'vacant': 'danger', 'leased': 'success', 'expiring': 'warning'}}"/>
                            </div>
                            <div class="oe_kanban_bottom_right">
                                <span><field name="facade_type"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 门面搜索视图 -->
    <record id="view_mall_facade_search" model="ir.ui.view">
        <field name="name">mall.facade.search</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <search>
                <field name="mall_id" string="商场" filter_domain="[('mall_id', 'ilike', self)]"/>
                <field name="name" string="门面编号" filter_domain="[('name', 'ilike', self)]"/>
                <field name="zone" string="区域" filter_domain="[('zone', 'ilike', self)]"/>
                <field name="address" string="地址" filter_domain="[('address', 'ilike', self)]"/>
                <field name="tenant_partner_id" string="租户" filter_domain="[('tenant_partner_id', 'ilike', self)]"/>
                <separator/>
                <filter string="空置" name="vacant" domain="[('status', '=', 'vacant')]"/>
                <filter string="已租" name="leased" domain="[('status', '=', 'leased')]"/>
                <filter string="即将到期" name="expiring" domain="[('status', '=', 'expiring')]"/>
                <separator/>
                <filter string="商铺" name="shop" domain="[('facade_type', '=', 'shop')]"/>
                <filter string="餐饮" name="restaurant" domain="[('facade_type', '=', 'restaurant')]"/>
                <filter string="办公" name="office" domain="[('facade_type', '=', 'office')]"/>
                <filter string="仓储" name="warehouse" domain="[('facade_type', '=', 'warehouse')]"/>
                <separator/>
                <filter string="有上下水" name="has_water" domain="[('has_water', '=', True)]"/>
                <filter string="有电力" name="has_electricity" domain="[('has_electricity', '=', True)]"/>
                <filter string="有燃气" name="has_gas" domain="[('has_gas', '=', True)]"/>
                <filter string="有空调" name="has_air_conditioning" domain="[('has_air_conditioning', '=', True)]"/>
                <group expand="0" string="分组">
                    <filter string="商场" name="group_by_mall" context="{'group_by': 'mall_id'}"/>
                    <filter string="状态" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="门面类型" name="group_by_facade_type" context="{'group_by': 'facade_type'}"/>
                    <filter string="区域" name="group_by_zone" context="{'group_by': 'zone'}"/>
                    <filter string="楼层" name="group_by_floor" context="{'group_by': 'floor'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="act_mall_facade" model="ir.actions.act_window">
        <field name="name">门面</field>
        <field name="res_model">mall.facade</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_mall_facade_search"/>
    </record>
    </data>
</odoo>