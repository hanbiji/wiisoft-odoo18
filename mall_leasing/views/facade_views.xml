<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mall_facade_tree" model="ir.ui.view">
        <field name="name">mall.facade.tree</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="address"/>
                <field name="area"/>
                <field name="floor"/>
                <field name="status"/>
                <field name="tenant_contract_id"/>
            </list>
        </field>
    </record>

    <record id="view_mall_facade_form" model="ir.ui.view">
        <field name="name">mall.facade.form</field>
        <field name="model">mall.facade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action" name="action_view_landlord_contract" icon="fa-file-text">
                            <field string="房东合同" name="landlord_contract_id" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="action" name="action_view_tenant_contract" icon="fa-file-text-o">
                            <field string="租户合同" name="tenant_contract_id" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="area"/>
                            <field name="floor"/>
                            <field name="status" readonly="1"/>
                        </group>
                        <group>
                            <field name="image_main" widget="image"/>
                            <field name="layout_plan" filename="layout_plan_name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_view_landlord_contract" model="ir.actions.act_window">
        <field name="name">房东合同</field>
        <field name="res_model">mall.leasing.contract</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("facade_id", "=", active_id), ("contract_type", "=", "landlord")]</field>
        <field name="context">{"default_facade_id": active_id, "default_contract_type": "landlord"}</field>
    </record>

    <record id="action_view_tenant_contract" model="ir.actions.act_window">
        <field name="name">租户合同</field>
        <field name="res_model">mall.leasing.contract</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("facade_id", "=", active_id), ("contract_type", "=", "tenant")]</field>
        <field name="context">{"default_facade_id": active_id, "default_contract_type": "tenant"}</field>
    </record>

    <record id="act_mall_facade" model="ir.actions.act_window">
        <field name="name">门面</field>
        <field name="res_model">mall.facade</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>