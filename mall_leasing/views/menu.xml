    </record>
    <menuitem id="menu_mall_contract_landlord" name="房东合同" parent="menu_mall_contract" action="action_mall_contract_landlord" sequence="22"/>

    <record id="action_mall_communication" model="ir.actions.act_window">
        <field name="name">沟通日志</field>
        <field name="res_model">mall.communication</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_mall_communication" name="沟通日志" parent="menu_mall_leasing_root" action="action_mall_communication" sequence="30"/>
</odoo>